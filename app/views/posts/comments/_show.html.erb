<div id = "post_comment_<%= comment.id %>">
  <%= comment.body %>
  <br>
  <div class = "col-md-8 offset-md-8">
    <%= link_to "Edit", edit_post_comment_path(id: comment.id, post_id: comment.post.id), remote: true, class: "btn btn btn-secondary" %>
    <%= link_to "Delete", post_comment_path(id: comment.id, post_id: comment.post.id), method: :delete, confirm: "Are you sure?", remote: true, class: "btn btn btn-danger" %>
  </div>
<hr>
</div>